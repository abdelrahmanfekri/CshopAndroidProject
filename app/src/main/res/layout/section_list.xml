<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"> // Only works inside a RelativeLayout
        <ImageView
            android:id="@+id/ImageView_Sections"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_schop" />
        <TextView
            android:id="@+id/ImageViewText_Section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ImageView_Sections"
            android:text="Hello"
            android:textSize="32sp"
            android:layout_margin="20dp"
            android:textStyle="bold"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>